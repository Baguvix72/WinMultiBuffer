<UserControl x:Class="WpfAppMultiBuffer.Views.BuffersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppMultiBuffer.Views"
              xmlns:viewModel="clr-namespace:WpfAppMultiBuffer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModel:BuffersViewModel}">
    <WrapPanel x:Name="MainPanel" >
        <WrapPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF2D3EAC" Offset="0"/>
                <GradientStop Color="#FF30B093" Offset="1"/>
            </LinearGradientBrush>
        </WrapPanel.Background>
        <ItemsControl ItemsSource="{Binding Buffers}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Name="Grid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="10*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Margin="10,10,0,0" 
                                   TextWrapping="Wrap" 
                                   x:Name="HeadItem" 
                                   TextAlignment="Center" 
                                   Foreground="Black" 
                                   FontWeight="SemiBold"
                                   Grid.Row="0"
                                   Grid.Column="0" 
                                   Padding="5"
                                   Text="{Binding Name}">
                            <TextBlock.Background>
                                <SolidColorBrush Color="White" Opacity="0.3"/>
                            </TextBlock.Background>
                        </TextBlock>
                        <Button x:Name="Clear"
                                Content="X" 
                                Margin="5,10,10,0"
                                Grid.Row="0"
                                Grid.Column="1" 
                                FontWeight="SemiBold" 
                                VerticalContentAlignment="Center" 
                                HorizontalContentAlignment="Center" 
                                ScrollViewer.VerticalScrollBarVisibility="Disabled" Padding="5"
                                Command="{Binding DeleteCommand}">
                            <Button.BorderBrush>
                                <SolidColorBrush Color="White" Opacity="0.3"/>
                            </Button.BorderBrush>
                            <Button.Background>
                                <SolidColorBrush Color="White" Opacity="0.3"/>
                            </Button.Background>
                        </Button>
                        <TextBox Name="BodyItem" 
                                 Margin="10" 
                                 Grid.Row="1" 
                                 TextWrapping="Wrap" 
                                 Text="{Binding Value}" 
                                 HorizontalContentAlignment="Stretch" 
                                 VerticalContentAlignment="Stretch" 
                                 HorizontalScrollBarVisibility="Visible" 
                                 VerticalScrollBarVisibility="Auto" 
                                 IsReadOnly="True" 
                                 SelectionBrush="#FFD75800" 
                                 Grid.ColumnSpan="2">
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0.85"/>
                            </TextBox.Background>
                        </TextBox>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </WrapPanel>
</UserControl>
