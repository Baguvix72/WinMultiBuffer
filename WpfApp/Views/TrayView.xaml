<UserControl x:Class="MultiBuffer.WpfApp.Views.TrayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:MultiBuffer.WpfApp.ViewModels"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             d:DataContext="{d:DesignInstance viewModel:WindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="0" d:DesignWidth="0">
    <Grid>
        <tb:TaskbarIcon x:Name="NotifyIcon" ToolTipText="MultiBuffer is runnig!">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Buffers" Command="{Binding ShowBuffers}"/>
                    <MenuItem Header="Help" Command="{Binding ShowHelp}"/>
                    <MenuItem Header="Exit" Command="{Binding CloseApp}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</UserControl>
