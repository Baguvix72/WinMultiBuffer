<Window x:Class="MultiBuffer.WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="{Binding ViewName}" MinHeight="500" MinWidth="650" WindowState="{Binding CurrentWindowState}">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF2D3EAC" Offset="0"/>
            <GradientStop Color="#FF30B093" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel>
        <ContentControl x:Name="FrameContent" x:FieldModifier="public" VerticalAlignment="Top" 
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </StackPanel>
</Window>
